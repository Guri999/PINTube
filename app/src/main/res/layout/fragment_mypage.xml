<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mypage_fragment"
    tools:context=".ui.mypage.MypageFragment">

    <ImageView
        android:id="@+id/iv_mypage_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/main_color"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_mypage_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="36dp"
        android:src="@drawable/searchfragment_backarrow"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_mypage_search"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="36dp"
        android:contentDescription="search icon"
        android:src="@drawable/search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="40dp"
        android:elevation="6dp"

        app:layout_constraintTop_toTopOf="@+id/rv_mypage_list"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_mypage_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="200dp"
            android:background="@drawable/ic_account_empty"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <ImageView
                android:id="@+id/iv_mypage_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:background="@drawable/ic_account_empty"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_mypage_channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="24sp"
            android:fontFamily="@font/roboto_bold"
            android:text="채널명"
            android:visibility="visible"

            app:layout_constraintTop_toTopOf="@+id/cv_mypage_profile"
            app:layout_constraintStart_toEndOf="@+id/cv_mypage_profile"
            />

        />
        <TextView
            android:id="@+id/tv_mypage_channel_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_medium"
            android:text="\@channelId"
            android:visibility="visible"

            app:layout_constraintTop_toBottomOf="@+id/tv_mypage_channel_name"
            app:layout_constraintStart_toStartOf="@+id/tv_mypage_channel_name"

            />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sibtn_mypage_channel_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:visibility="gone"

            app:layout_constraintStart_toEndOf="@+id/cv_mypage_profile"
            app:layout_constraintTop_toTopOf="@+id/cv_mypage_profile"
            app:layout_constraintBottom_toBottomOf="@+id/cv_mypage_profile"
            />

        <TextView
            android:id="@+id/tv_mypage_channel_logout"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_stroke"
            android:clipToOutline="true"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:textColor="@color/main_color"
            android:fontFamily="@font/roboto_regular"
            android:textSize="14sp"
            android:text="로그아웃"
            android:visibility="visible"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_mypage_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:background="@drawable/subtract"
        android:elevation="4dp"
        android:paddingTop="160dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>