<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="40dp">
    
    <ImageView
        android:id="@+id/iv_my_header_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/push_pin"
        android:visibility="visible"

        app:tint="@color/main_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_my_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textSize="14sp"
        android:textColor="@color/main_color"
        android:fontFamily="@font/roboto_bold"
        android:text="저장한 동영상"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_my_header_icon"
        />

    <TextView
        android:id="@+id/tv_my_header_btn"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginHorizontal="6dp"
        android:layout_marginVertical="12dp"
        android:background="@drawable/round_stroke"
        android:clipToOutline="true"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:textColor="@color/main_color"
        android:fontFamily="@font/roboto_regular"
        android:textSize="14sp"
        android:text="더보기"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>