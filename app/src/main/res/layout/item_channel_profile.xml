<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_mypage_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="200dp"
        android:background="@drawable/ic_account_empty"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/iv_mypage_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_account_empty"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_mypage_channel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="24sp"
        android:fontFamily="@font/roboto_bold"
        android:text="채널명"

        app:layout_constraintTop_toTopOf="@+id/cv_mypage_profile"
        app:layout_constraintStart_toEndOf="@+id/cv_mypage_profile"
        />

        />
    <TextView
        android:id="@+id/tv_mypage_channel_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_medium"
        android:text="\@channelId"
        android:visibility="visible"

        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_channel_name"
        app:layout_constraintStart_toStartOf="@+id/tv_mypage_channel_name"

        />
    <TextView
        android:id="@+id/tv_mypage_channel_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textSize="11sp"
        android:fontFamily="@font/roboto_medium"
        android:text="구독자 n명 | 동영상 n개"
        android:visibility="visible"

        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_channel_id"
        app:layout_constraintStart_toStartOf="@+id/tv_mypage_channel_id"
        />

    <TextView
        android:id="@+id/tv_mypage_channel_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_medium"
        android:text="채널 소개 문구"
        android:visibility="visible"

        app:layout_constraintTop_toBottomOf="@+id/cv_mypage_profile"
        app:layout_constraintStart_toStartOf="@+id/cv_mypage_profile"
        />


</androidx.constraintlayout.widget.ConstraintLayout>